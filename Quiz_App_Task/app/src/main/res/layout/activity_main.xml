<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/q1TextviewID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Question:1 What is the longest sea beach in the world?"
        android:textSize="30sp" />

    <RadioGroup
        android:id="@+id/q1radioGroupID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp">

        <RadioButton
            android:id="@+id/q1radioBtn1ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cox's Bazar"
            android:textSize="40sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/q1radioBtn2ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stockton Beach"
            android:textSize="40sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/q1radioBtn3ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Virginia Beach"
            android:textSize="40sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/q1radioBtn4ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bali sea Beach"
            android:textSize="40sp"
            android:textStyle="bold" />
    </RadioGroup>

    <Button
        android:id="@+id/nextBtnD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:onClick="nextFunction"
        android:text="Next"
        android:textSize="40sp" />
</LinearLayout>